@model Movie

@{
    ViewData["Title"] = "Detalle";
}

<style>
    .glass-container {
        background-color: rgba(255, 255, 255, 0.8);
        border-radius: 10px;
        padding: 20px;
        backdrop-filter: blur(10px);
    }

    .col-sm-2 {
        font-weight: bold;
    }

    #preview, #currentImage {
        max-width: 100%;
        height: auto;
        margin-top: 10px;
    }
</style>

<div class="container mt-5 glass-container">
    <h1 class="text-center">@ViewData["Title"]</h1>
    <div>
        <h4>Movie</h4>
        <hr />
        <div class="row">
            <div class="col-sm-2">
                Titulo
            </div>
            <div class="col-sm-10">
                @Html.DisplayFor(model => model.Title)
            </div>
            <div class="col-sm-2">
                Imagen
            </div>
            <div class="col-sm-10">
                <img id="currentImage" src="~/uploads/@Model.Movieimage" alt="Current Image">
            </div>
            <div class="col-sm-2">
                Reparto
            </div>
            <div class="col-sm-10">
                @Html.DisplayFor(model => model.Casting)
            </div>
            <div class="col-sm-2">
                Director
            </div>
            <div class="col-sm-10">
                @Html.DisplayFor(model => model.Director)
            </div>
            <div class="col-sm-2">
                Link
            </div>
            <div class="col-sm-10">
                @Html.DisplayFor(model => model.Link)
            </div>
            <div class="col-sm-2">
                Genero
            </div>
        </div>
    </div>
    <div>

        <a asp-action="Index" class="btn btn-secondary">Volver</a>
    </div>
</div>
