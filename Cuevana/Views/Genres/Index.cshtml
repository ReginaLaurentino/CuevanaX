@model IEnumerable<Genre>

@{
    ViewData["Title"] = "Generos";
}

<style>
    body {
        background-color: #51d1f6; 
        backdrop-filter: blur(10px); 
        padding-bottom: 60px; 
    }

    .glass-bg {
        background-color: rgba(255, 255, 255, 0.5); 
        border-radius: 10px;
        padding: 20px; 
    }

    .btn-create {
        background-color: #82c4e8; 
        border-color: #82c4e8; 
        color: #fff; 
    }

        .btn-create:hover {
            background-color: #5cafe0; 
            border-color: #5cafe0;
        }
</style>

<div class="container mt-5 glass-bg">
    <h1 class="text-center">@ViewData["Title"]</h1>
    <div class="row justify-content-between">
        <div class="col-md-6">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">Genero</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.GenreName)</td>
                            <td>
                                <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-warning">Edit</a>                              
                                <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="row justify-content-end">
        <div class="col-md-2">
            <a href="@Url.Action("Create")" class="btn btn-primary float-end btn-create">Agregar</a>
        </div>
    </div>
</div>
