@using System.Security.Claims
@model Genre

@{
    ViewData["Title"] = "Create";
    var userIdClaim = User.FindFirst("id");
    var userId = userIdClaim.Value;
}

<style>
    body {
        background-color: #51d1f6; /* Azul claro */
        backdrop-filter: blur(10px); /* Efecto glass */
        padding-bottom: 60px; /* Altura del footer */
    }

    .glass-effect {
        background-color: rgba(255, 255, 255, 0.5); /* Color blanco semi-transparente para el efecto glass */
        padding: 20px; /* Ajuste de espaciado interno */
        border-radius: 10px; /* Borde redondeado */
    }

    .btn-create {
        background-color: #add8e6; /* Celestito */
        border-color: #add8e6; /* Celestito */
        color: #fff; /* Texto blanco */
    }

        .btn-create:hover {
            background-color: #87ceeb; /* Celestito más oscuro al pasar el mouse */
            border-color: #87ceeb; /* Celestito más oscuro al pasar el mouse */
        }
</style>

<div class="glass-effect">
  

    <h4>Generos</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            @using (Html.BeginForm("Create", "Genres", FormMethod.Post))
            {
                <div class="form-group">
                    @Html.LabelFor(u => u.GenreName)
                    @Html.TextBoxFor(u => u.GenreName, "", new { @class = "form-control" })
                    @Html.ValidationMessageFor(u => u.GenreName, null, new { @class = "text-danger" })
                </div>

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <hr />
                <div class="form-group">
                    <input type="submit" value="Agregar" class="btn btn-create" />
                </div>
            }
        </div>
    </div>
    <hr />
    <div>
        <a asp-action="Index">Regresar</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
